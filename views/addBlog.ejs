<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
<title>Add New Blog</title>
</head>
<body>
    <%- include("./partials/nav")  %>  
    <div class="container mt-4">
        <h1>Add Blog</h1>
        <form action="/blog" method="post" enctype="multipart/form-data">
            
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control" id="title" aria-describedby="title" name="title">
              </div>
              <div class="mb-3">
                <label for="body">Body</label>
                <textarea class="form-control" id="body" name="body" style="height: 100px"></textarea>
                </div>
                <div class="mb-3">
                    <label for="coverImage" class="form-label">Add Cover Image</label>
                    <input type="file" class="form-control" id="coverImage" aria-describedby="coverImage" name="coverImage">
                    </div>
           
           
            <button type="submit" class="btn btn-success">Submit</button>
          </form>
    </div>
   
 
    <%- include('./partials/scripts') %>
   </body>
</html>